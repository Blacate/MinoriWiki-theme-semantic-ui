<div id="subSidebar" class="ui vertical menu sidebar-column">
    <div class="item">
        <div class="header"><a href="<%= config['base'].path %>" target="_self">Homepage</a></div>
        <% if (config['wiki'].log) { %>
        <div class="header"><a href="<%= config['base'].path %>changelog/">Changelog</a></div>
        <% } %>
    </div>
    <% categories.forEach(function(category) { %>
    <div class="item">
        <div class="header"><%= category.name %></div>
        <div class="menu">
            <% category.pages.forEach(function(p) { %>
            <a href="<%= config['base'].path %><%= config['dir'].page %><%= p.link %>/" target="_self" class="item">
                <% if (p.link.lastIndexOf('/') !== 0) { %>
                <% var prelink = p.link.split('/')[1] %>
                <%= prelink %> / <%= p.title %>
                <% } else { %>
                <%= p.title %>
                <% } %>
            </a>
            <% }) %>
        </div>
    </div>
    <% }) %>
</div>
